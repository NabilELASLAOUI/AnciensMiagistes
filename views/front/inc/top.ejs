<body>
<div id="wrapper" class="home-page">
    <div class="topbar">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="pull-left hidden-xs">MIAGE MULHOUSE</p>
                    <% if (isAuthenticated){ %>
                        <p class="pull-right conn">Bonjour <%= nom %> | <a href="/users/monProfile/<%= idUser %>"> mon Profile</a>| <a href="/users/logout"> DÃ©connexion</a></p>
                    <% }else{ %>
                    <p class="pull-right conn"><a href="/login">Connexion</a> | <a href="/users/register">Inscription</a></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- start header -->
    <header>
        <div class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img src="../front/img/logo.png" alt="logo"/>ALUMNI</a>
                </div>
                <div class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        <li<% if(pageCourante === '/'){ %> class="active" <% } %> ><a href="/">Accueil</a></li>
                        <li <% if(pageCourante === '/apropos'){ %> class="active" <% } %> ><a href="/apropos">Qui sommes nous</a></li>
                        <li <% if(pageCourante === '/offres/1' || pageCourante === '/offres/2' ){ %> class="active" <% } %> class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Offres <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <% if(catMenu){ for(categ of catMenu){%>
                                <li><a href="/offres/<%= categ.CATEGORYID%>"><%= categ.CATEGORYNAME %></a></li>
                                <%}}%>

                            </ul>
                        </li>
                        <% if(actu){ for(actu of actu){%>
                        <li  <% if(pageCourante === '/actualites/'+actu.CATEGORYID){ %> class="active" <% } %> ><a href="/actualites/<%= actu.CATEGORYID%>"><%= actu.CATEGORYNAME %></a></li>
                        <%}}%>
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Liens utiles <b
                                        class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">MMA</a></li>
                                <li><a href="#">e-services</a></li>
                            </ul>
                        </li>
                        <li <% if(pageCourante === '/contact'){ %> class="active" <% } %>><a href="/contact">Contact</a></li>
                        <% if (isAuthenticated){ %>
                            <li><a href="/users">Espace Admin</a></li>
                            <% } %>

                    </ul>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->