    <base href="/">
    <!-- css -->
    <link href="../front/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="../front/css/fancybox/jquery.fancybox.css" rel="stylesheet" type="text/css"/>
    <link href="../front/css/jcarousel.css" rel="stylesheet" type="text/css"/>
    <link href="../front/css/flexslider.css" rel="stylesheet" type="text/css"/>
    <link href="../front/js/owl-carousel/owl.carousel.css" rel="stylesheet" type="text/css"/>
    <link href="../front/css/style.css" rel="stylesheet" type="text/css"/>

