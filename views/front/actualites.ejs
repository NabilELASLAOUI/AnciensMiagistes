<% include inc/top.ejs %>
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="pageTitle">
                    <% if(la_categorie){ %>
                    <%= la_categorie[0].CATEGORYNAME %>
                    <% } %>
                </h2>
            </div>
            
        </div>
    </div>
</section>
<section id="content">
    <div class="container content" style="min-height: 432px;">

        <!-- Info Blcoks -->
        <div class="row">
            <% if(actualites){for(actualite of actualites){%>
            <div class="col-sm-12 info-blocks">
                <div class="info-blocks-in">
                    <h3><%= actualite.ARTICLENAME %>

                    <p>
                        <%= actualite.ARTICLEDESC.substring(0,200) %>
                    </p>
                    <p><a href="/offres/detail/<%= actualite.ARTICLEID %>/<%= actualite.CATEGORYID %>" class="lireplus pull-right">Details +</a></p>
                </div>
            </div>
            <%}}%>

        </div>

    </div>
</section>
<% include inc/bottom.ejs %>