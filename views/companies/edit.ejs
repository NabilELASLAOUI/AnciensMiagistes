<% include ../layout/header.ejs  %>
    <div class="container">
        <%- messages('message', locals) %>
            <% if(locals.errors){  for(error of locals.errors) {  %>

                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
                <% }} %>
                <% for(comp of comp); %>
                    <div class="row main">
                        <div class="panel-heading">
                            <div class="panel-title text-center">
                                <h1 class="title">UHA</h1>
                                <hr />
                            </div>
                        </div>
                        <div class="main-login main-center">
                            <form class="form-horizontal" method="post" action="/company/update">

                                <div class="form-group">
                                    
                                    <div class="cols-sm-10">
                                        
                                        <label for="name" class="cols-sm-2 control-label">Nom de la compagnie</label></br>
										<input type="text" class="form-control" name="COMPANYNAME" id="name" value="<%= comp.COMPANYNAME%>" />
										<label for="desc" class="cols-sm-2 control-label">Description de la compagnie</label>
										<input type="text" class="form-control" name="COMPANYDESC" id="desc" value="<%= comp.COMPANYDESC%>" />
										<input type="hidden" class="form-control" name="USERID" id="id" value="<%= comp.USERID%>" />
                                        
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Modifier</button>
                                </div>
                            </form>
                        </div>
                    </div>
    </div>

    <script type="text/javascript" src="assets/js/bootstrap.js"></script>
    </div>
    <% include ../layout/footer  %>