<% include ../layout/header.ejs  %>
    <div class="container">
        <%- messages('message', locals) %>
            <% if(locals.errors){  for(error of locals.errors) {  %>

                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
                <% }} %>
				
                    <div class="row main">
                        <div class="panel-heading">
                            <div class="panel-title text-center">
                                <h1 class="title">UHA</h1>
                                <hr />
                            </div>
                        </div>
                        <div class="main-login main-center">
                            <form class="form-horizontal" method="post" action="/company/create">

                                <div class="form-group">
                                    <div class="cols-sm-10">
										<label for="sel1">ID Utilisateur:</label>
										  <select name="USERID" class="form-control" id="sel1">
										  <% for(user of users){ %>
											<option value="<%= user.USERID %>"><%= user.USERLOGIN %></option>
											<% } %>
										  </select>
                                        <label for="name" class="cols-sm-2 control-label">Nom de la compagnie</label>
                                        <input type="text" class="form-control" name="COMPANYNAME" id="name" />
                                        <label for="desc" class="cols-sm-2 control-label">Description de la compagnie</label>
                                        <input type="text" class="form-control" name="COMPANYDESC" id="desc" />
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Ajouter</button>
                                </div>
                            </form>
                        </div>
                    </div>
    </div>

    <script type="text/javascript" src="assets/js/bootstrap.js"></script>
    </div>
    <% include ../layout/footer  %>