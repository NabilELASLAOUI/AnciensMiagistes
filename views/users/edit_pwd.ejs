<% include ../front/inc/top.ejs %>
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="pageTitle">
                    Modifier mon mot de passe
                </h2>
            </div>

        </div>
    </div>
</section>
<section id="content">
    <div class="container content" style="min-height: 432px;">
        <%- messages('message', locals) %>
        <% if(locals.errors){  for(error of locals.errors) { %>

        <div class="alert alert-danger">
            <%= error.msg %>
        </div>
        <% }} %>
        <div class="row main">

            <div class="main-login main-center">
                <form class="form-horizontal" method="post" action="/users/update_pwd">
                    <input type="hidden" name="USERID" id="id" value="<%= user[0].USERID %>"/>
                    <div class="form-group">
                        <label for="newpwd" class="cols-sm-2 control-label">Nouveau Mot de passe</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="password" class="form-control" name="USERPWDNEW" id="newpwd"/>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="newpwd2" class="cols-sm-2 control-label">Confirmer le nouveau Mot de passe</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="password" class="form-control" name="USERPWDNEW2" id="newpwd2"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
<% include ../front/inc/bottom  %>