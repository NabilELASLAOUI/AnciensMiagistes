<% include ../front/inc/top.ejs %>
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="pageTitle">
                    Modifier mes informations
                </h2>
            </div>

        </div>
    </div>
</section>
<section id="content">
    <div class="container content" style="min-height: 432px;">
        <div class="row main">
            <div class="main-login main-center">
                <form class="form-horizontal" method="post" action="/users/updateEntreprise">
                    <% if(role === 'ALUMNI'){ %>
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Promotion</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" name="USERGRADYEAR" id="name"
                                       value="<%=  alumni.USERGRADYEAR %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="USERFIRSTHIRINGYEAR" class="cols-sm-2 control-label">Date de premi√®re embauche</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" name="USERFIRSTHIRINGYEAR" id="USERFIRSTHIRINGYEAR"
                                       value="<%=  alumni.USERFIRSTHIRINGYEAR %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="USERID" class="cols-sm-2 control-label">Entreprise Actuel</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERCOMPANY" id="USERID"
                                       value="<%= alumni.USERCOMPANY %>"/>
                                <input type="hidden" name="USERID" id="id" value="<%= alumni.USERID %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="USERFUNCTION" class="cols-sm-2 control-label">Fonction</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERFUNCTION" id="USERFUNCTION"
                                       value="<%= alumni.USERFUNCTION %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="USERHIRINGYEAR" class="cols-sm-2 control-label">Date d'embauche</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" name="USERHIRINGYEAR" id="USERHIRINGYEAR"
                                       value="<%=  alumni.USERHIRINGYEAR %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="USERSALARY" class="cols-sm-2 control-label">Salaire</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERSALARY" id="USERSALARY"
                                       value="<%= alumni.USERSALARY %>"/>
                            </div>
                        </div>
                    </div>

                  <% }else if(role === 'ENTREPRISE'){ %>
                    <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Entreprise</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                    <input type="text" class="form-control" name="COMPANYNAME" id="name"
                                           value="<%= company.COMPANYNAME %>"/>
                                           <input type="hidden" name="USERID" id="id" value="<%= idUser %>"/>
                                </div>
                            </div>
                    </div>
                    <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Description</label>
                                    <textarea class="form-control" name="COMPANYDESC" id="desc" required  rows="10" cols="50"><%= company.COMPANYDESC %></textarea>
                    </div>
                    <% } %>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
<% include ../front/inc/bottom  %>