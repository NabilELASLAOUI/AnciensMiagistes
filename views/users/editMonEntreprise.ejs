<% include ../front/inc/top.ejs %>
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="pageTitle">
                    Modifier mes informations
                </h2>
            </div>

        </div>
    </div>
</section>
<section id="content">
    <div class="container content" style="min-height: 432px;">
        <div class="row main">
            <div class="main-login main-center">
                <form class="form-horizontal" method="post" action="/users/updateEntreprise">
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Entreprise</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERCOMPANY" id="name"
                                       value="<%= alumni.USERCOMPANY %>"/>
                                <input type="hidden" name="USERID" id="id" value="<%= alumni.USERID %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Fonction</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERFUNCTION" id="name"
                                       value="<%= alumni.USERFUNCTION %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Date d'embauche</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" name="USERHIRINGYEAR" id="name"
                                       value="<%= USERHIRINGYEAR %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Salaire</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" name="USERSALARY" id="name"
                                       value="<%= alumni.USERSALARY %>"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Promotion</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                <input type="date" class="form-control" name="USERGRADYEAR" id="name"
                                       value="<%= USERGRADYEAR %>"/>
                            </div>
                        </div>
                    </div>
                  
                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
<% include ../front/inc/bottom  %>