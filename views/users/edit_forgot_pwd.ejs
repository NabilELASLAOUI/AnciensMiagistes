<% include ../front/inc/top.ejs %>
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h2 class="pageTitle">
                        Réinitialiser mon mot de passe
                    </h2>
                </div>

            </div>
        </div>
    </section>
    <section id="content">
        <div class="container content" style="min-height: 432px;">
            <%- messages('message', locals) %>
                <% if(locals.errors){  for(error of locals.errors) { %>

                    <div class="alert alert-danger">
                        <%= error.msg %>
                    </div>
                    <% }} %>
                        <div class="row main">

                            <div class="main-login main-center">
                                <form class="form-horizontal" method="post" action="/users/update_forgot_pwd">
                                    <div class="form-group">
                                        <label for="newpwd" class="cols-sm-2 control-label">Renseigner l'adresse mail avec lequel vous vous êtes inscrit sur le site. Un mot de passe temporaire vous sera envoyé à cette adresse</label>
                                        <div class="cols-sm-10">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-user fa" aria-hidden="true"></i>
                                                </span>
                                                <input type="email" class="form-control" name="USERLOGIN" placeholder="E-mail" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Réinitialiser</button>
                                    </div>
                                </form>
                            </div>
                        </div>
        </div>

    </section>
    <% include ../front/inc/bottom  %>